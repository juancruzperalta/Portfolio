---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Courgette&family=Edu+SA+Beginner:wght@400..700&family=Gruppo&family=Montserrat:ital,wght@0,100..900;1,100..900&family=Neuton:ital,wght@0,200;0,300;0,400;0,700;0,800;1,400&family=Onest:wght@100..900&family=Open+Sans:ital,wght@0,300..800;1,300..800&family=Orbitron:wght@400..900&family=Playwrite+GB+S:ital,wght@0,100..400;1,100..400&family=Quicksand:wght@300..700&family=Roboto+Condensed:ital,wght@0,100..900;1,100..900&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
    <meta name="generator" content={Astro.generator} />

		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
:root {
  --color-primary: rgb(0, 1, 22);
  --color-secondary-bg:  #2B7A78;
  --color-secondary: #F4F4F9;
  --color-skill-text:#d4d4f7;
  --color-title: #dddddd;
  --color-resalt: #fae880;
  --color-border: #A3A9C2;
}
body,
html {
background-image: radial-gradient(circle, #181b53, #0f1745, #091337, #070c29, #00021c);
  min-height: 100vh;
  margin: 0;
  font-family:ui-sans-serif,system-ui,sans-serif,"Apple Color Emoji","Segoe UI Emoji",Segoe UI Symbol,"Noto Color Emoji";
  font-family: "Onest", sans-serif;
  font-style: normal;
  color: var(--color-secondary);
}

main {
  display: flex;
  flex-direction: column;
  margin-left: auto;
  max-width: 896px;
  position: relative;
  margin-right: auto;
  row-gap: 2.5rem;
  padding-bottom: 5rem;
}

@media (max-width: 575.98px) {

}
@media (min-width: 576px) and (max-width: 768px) {
  main{
    max-width: 600px;
  }
}
</style>
