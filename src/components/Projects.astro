<style is:inline>
    h2{
    color: var(--color-title);
  }
  .section {
  width: 100%;
}
.container-projects{
  width: 100%;
}
.card-project{
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 1rem;
}
.card-image{
  width:100%;
  height: 100%;
}
.card-image img{
  width: 100%;
  height: 100%;
    border-radius: 1rem;
}
.article-card {
  position: relative;
  width: 100%;
  height: 240px;
  border-radius: 1rem;

  transition: all 0.5s cubic-bezier(.4, 0, .2, 1);
}
.article-card::before{
  content: ' ';
  position: absolute;
  top:0;
  bottom:0;
  left:0;
  right:0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.603);
  border-radius: 1rem;
}
.article-card:hover::before{
  content: ' ';
  position: absolute;
  top:0;
  bottom:0;
  left:0;
  right:0;
  width: 100%;
  height: 100%;
 background: linear-gradient(135deg, rgba(72, 85, 99, 0.9), rgba(41, 50, 60, 0.7));
  border-radius: .5rem;
  transition: background 0.4s ease;
}
.redirection-links{
  opacity:0;
}
.article-card:hover .card-text{
  opacity: 0; 
  transform: translateY(-10px);
  transition: opacity 0.3s ease-in-out, transform 0.3s ease-in-out;
}
.article-card:hover .card-image a{
  display:flex;
  z-index:3;
}
.article-card:hover .redirection-links {
  position: absolute;
  top: 0;
  bottom:0;
  left:0;
  right:0;
  opacity: 1;
  display:flex;
  align-items: center;
  justify-content: center;
  gap:1rem;
}
.card-image a{
  color:var(--color-skill-text);
  background-color: rgb(15, 15, 15);
  padding:.35rem;
  font-size: 1.1rem;
    border-radius: .25rem;
    text-decoration: none;
    display:none;
    align-items:center;
    gap:0.5rem;
    fill:var(--color-skill-text);
    cursor:pointer;
}
.card-image svg{
  width: 20px;
  height: 20px;
}

.card-text{

  bottom: 0;
  position: absolute;
  height: auto;
  border-radius: 0rem 0rem 1.5rem 1.5rem;
  padding: .25rem;
  padding-left:0.5rem;
  transition: opacity 0.3s ease-in-out, transform 0.3s ease-in-out;
}

.card-text-parraf{
  color: var(--color-skill-text);
  margin: 0.5rem;
  margin-left: 0;
}
.card-tools{
  display: flex;
  gap:.5rem;
}
.tools{
  gap:.3rem;
  display: flex;
  align-items: center;
  border-radius: 1.5rem;
   background-color: var(--color-secondary-bg);
  fill: var(--color-skill-text);
  padding:.35rem;
  font-size: .9rem;
  color: var(--color-skill-text);
}
.tools svg{
  width: 16px;
  height: 16px;
}
</style>
